	<!-- begin::Body -->
	<body class="kt-quick-panel--right kt-demo-panel--right kt-offcanvas-panel--right kt-header--fixed kt-header-mobile--fixed kt-subheader--enabled kt-subheader--fixed kt-subheader--solid kt-aside--enabled kt-aside--fixed kt-page--loading">
			
		<!-- begin:: Page -->
		
		<div class="kt-grid kt-grid--ver kt-grid--root">
	
			<div class="kt-grid kt-grid--hor kt-grid--root  kt-register kt-register--v6 kt-register--signin" id="kt_register">
				<div class="kt-grid__item kt-grid__item--fluid kt-grid kt-grid--desktop kt-grid--ver-desktop kt-grid--hor-tablet-and-mobile">
					<div class="kt-grid__item  kt-grid__item--order-tablet-and-mobile-2  kt-grid kt-grid--hor kt-register__aside">
						<div class="kt-register__wrapper">
							<div class="kt-register__container">
								<div class="kt-register__body">
									<div class="kt-register__logo">
										<a href="#">
											<!-- <img src="./assets/media/company-logos/logo-2.png"> -->
										</a>
									</div>
									
									
									<div class="kt-register__signup">
										<div class="kt-register__head">
											<h3 class="kt-register__title">Sign Up</h3>
											<div class="kt-register__desc">Enter your details to create your account:</div>
										</div>
										<% if(error && error.length > 0) { %>
											<div class="alert alert-danger alert-dismissible fade show kt-alert kt-alert--outline m-0" role="alert">
											<span><%= error %></span> 
											<button type="button" class="close" data-dismiss="alert" aria-label="Close">
												<span aria-hidden="true">&times;</span>
											</button>
											</div>
										<% } %>
										<% if(success && success.length > 0) { %>
											<div class="alert alert-success alert-dismissible fade show" role="alert">
											<p><%= success %></p> 
											<button type="button" class="close" data-dismiss="alert" aria-label="Close">
												<span aria-hidden="true">&times;</span>
											</button>
											</div>
										<% } %>
										<div class="kt-register__form">
											<form class="kt-form" action="/register" method="POST">
												<div class="form-group">
													<input class="form-control" type="text" id="user[firstName]" name="user[firstName]" placeholder="First Name" required>
												</div>
												<div class="form-group">
													<input class="form-control" type="text" id="user[lastName]" name="user[lastName]" placeholder="Last Name" required>
												</div>
												<div class="form-group">
													<input class="form-control" type="text" id="user[username]" name="username" placeholder="Username">
												</div>
												<div class="form-group">
													<input class="form-control" type="password" id="password" name="password" placeholder="Password">
												</div>
												<div class="form-group">
													<input class="form-control" type="password" placeholder="Confirm Password" name="conpassword">
												</div>
												<div class="form-group">
													<input class="form-control" type="text" id="user[email]" placeholder="Email" name="user[email]" required>
													<span class="form-text text-muted">Please provide a valid Email for verification purposes.</span>
												</div>
												<div class="form-group">
													<input class="form-control" type="number"  id="user[mobile]" name="user[mobile]" placeholder="Mobile No" required>
													<span class="form-text text-muted">Please provide a valid number for verification purposes.</span>
												</div>
												<div class="form-group form-control-last signup-ac-type" id="signup-actype">
														<label>A/c Type</label>
														<div class="kt-radio-inline ">
															<label class="kt-radio">
																<input class="form-control" type="radio" name="actype" id="isStudent" value="isStudent" checked> Student
																<span></span>
															</label>
															<label class="kt-radio">
																<input class="form-control" type="radio" name="actype" id="isFaculty" value="isFaculty"> Faculty
																<span></span>
															</label>
														</div>
														<span class="form-text text-muted">Faculty account will be activated only after the completion of additional verification procedures.</span>
													</div>
												<div class="kt-register__extra">
													<label class="kt-checkbox">
														<input type="checkbox" name="agree"> I Agree the <a href="#">terms and conditions</a>.
														<span></span>
													</label>
												</div>
												<div class="kt-register__actions">
													<button id="kt_register_signup_submit" class="btn btn-brand btn-pill btn-elevate">Sign Up</button>
													<button id="kt_register_signup_cancel" class="btn btn-outline-brand btn-pill">Cancel</button>
												</div>
											</form>
										</div>
									</div>
								</div>
							</div>
							<div class="kt-register__account">
								<span class="kt-register__account-msg">
									Already have an account? Login!
								</span>&nbsp;&nbsp;
								<a href="/login" id="kt_register_signup" class="kt-register__account-link">Login!</a>
							</div>
						</div>
					</div>
					<div class="kt-grid__item kt-grid__item--fluid kt-grid__item--center kt-grid kt-grid--ver kt-register__content" style="background-image: url(./assets/media//bg/bg-4.jpg);">
						<div class="kt-register__section">
							<div class="kt-register__block">
								<h2 class="kt-register__title">ExamClub.com</h2>
								<div class="kt-register__desc">
									<p>Join Our Community!</p>
									At CAExamClub.com we strive to build a robust community that will  
									<br>help you achieve your goals. 
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<!-- end:: Page -->

