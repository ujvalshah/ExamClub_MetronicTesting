                    <%} else if (page !== 'undefined' && page === 'dashboard_admin') {%>
                    <% include ./partials/_content-dashboard_admin %>
                    <%} else if (page !== 'undefined' && page === 'downloads_uploadform') {%>
                    <% include ./partials/_content-downloads_uploadform %>
                    <%} else if (page !== 'undefined' && page === 'downloads_updateform') {%>
                    <% include ./partials/_content-downloads_updateform %>
                    <%} else if (page !== 'undefined' && page === 'videos_uploadform') {%>
                    <% include ./partials/_content-videos_uploadform %>
                    <%} else if (page !== 'undefined' && page === 'videos_updateform') {%>
                    <% include ./partials/_content-videos_updateform %>
                    <%} else if (page !== 'undefined' && page === 'email-verification'){%>
                    <% include ./partials/_email-verification %>
                    <%} else if (page !== 'undefined' && page === 'filter-form-teacher'){%>
                    <% include ./partials/_content-filterform-teacher %>
                    <%} else if (page !== 'undefined' && page === 'filter-form'){%>
                    <% include ./partials/_content-filterform %>
                    <%} else if (page !== 'undefined' && page === 'filter-edit-form'){%>
                    <% include ./partials/_content-filtereditform %>
                    <%} else if (page !== 'undefined' && page === 'filter-edit-form-teacher'){%>
                    <% include ./partials/_content-filtereditform-teacher %>
                    <%} else if (page !== 'undefined' && page === 'filter-list'){%>
                    <% include ./partials/_content-filterlist %>
                    <%} else if (page !== 'undefined' && page === 'account-details'){%>
                    <% include ./partials/_content-account-details %>
                    <%} else if (page !== 'undefined' && page === 'forgot-password'){%>
                    <% include ./partials/_content-forgot_password %>
                    <%} else if (page !== 'undefined' && page === 'email-verification'){%>
                    <% include ./partials/_email-verification %>
                    <% } %>
                </div>
            </div>
            <% include ./partials/_footer-base %>
        </div>
    </div>
</div>
