<% include ./_subheader-subheader-v2 %>
<!-- begin:: Content -->
<div class="kt-container  kt-grid__item kt-grid__item--fluid">
  

    <div class="container my-4">
      <div class="row">
      <%exams.forEach(function(exam){%>
        <div class="col-4">
            <div class="kt-portlet kt-portlet--height-fluid">
                <div class="kt-portlet__head kt-portlet__head--noborder">
                    <div class="kt-portlet__head-label">
                    </div>
                </div>
                <div class="kt-portlet__body">
                    <!--begin::Widget -->
                    <div class="kt-widget kt-widget--user-profile-2">
                        <div class="kt-widget__head">
                            <div class="kt-widget__info pl-0">
                                <a href="#" class="kt-widget__username">
                                  <%=exam.exam%>
                                </a>
                            </div>
                        </div>
            
                        <div class="kt-widget__body">
                            <div class="kt-widget__item">
                                <div class="kt-widget__contact">
                                    <span class="kt-widget__label">Subjects:</span>
                                </div>
                                <%exam.subjects.forEach(function(subject){%>
                                <div class="kt-widget__contact">
                                    <span class="kt-widget__data"><%=subject%></span>
                                </div>
                                <%})%>
                            </div>
                        </div>
            
                        <div class="kt-widget__footer">
                          <div class="row">
                            <div class="col">
                              <a href='/filterform/<%=exam.id%>/edit' class="btn btn-label-success btn-lg btn-upper">Edit</a>
                            </div>
                            <div class="col">
                            <form action="/filterform/<%=exam.id%>?_method=DELETE" method="POST">
                              <button type="submit" class="btn btn-label-danger btn-lg btn-upper">Delete</button>
                            </form>
                            </div>
                          </div>
                        </div>
                    </div>
                    <!--end::Widget -->
                </div>
            </div>
        </div>

    <%})%>
    </div>



</div>
</div>
<!-- end:: Content -->


