<% include ./_subheader-subheader-v2 %>
<!-- begin:: Content -->
<div class="kt-container  kt-grid__item kt-grid__item--fluid">

    <div style="margin: 0 6rem">
        <div class="row mb-2">
          <div class="col-md-6">
          <h4 class="d-inline">Document Bookmarks</h4>    
        <p>You have <span class="kt-badge kt-badge--warning kt-badge--lg kt-badge--rounded"><%=user.downloadBookmarks.length%></span> bookmarked <%=user.downloadBookmarks.length===1 ? "document":"documents"%>.</p>  
          </div>
          <!-- <div class="col-md-6">
            <p><a href="/downloads/upload" class="btn btn-primary float-right">Upload</a></p>
          </div> -->
        </div>
        
        <!-------------------------------------------------------------------------------->
        <!----------------------------Downloads Table------------------------------------->
        <!-------------------------------------------------------------------------------->
        
        <div class="table-responsive mb-5">
            <div class="kt-portlet__body">
                <table class="table table-striped- table-bordered table-hover table-checkable" id="kt_table_1">
          <!-- <table id="container_downloads_student_dashboard" class="table table-sm table-hover table-striped overflow-auto"> -->
            <thead>
                <tr class="table-light">
                    <th class="text-center tdv" scope="col">Sr.No</th>
                    <th class="text-center tdv" scope="col">Date</th>
                    <th class="text-center tdv" scope="col">Author</th>
                    <th class="text-center tdv" scope="col">Title</th>
                    <th class="text-center tdv" scope="col">Exam</th>
                    <th class="text-center tdv" scope="col">Attempt</th>
                    <th class="text-center tdv" scope="col">Subject</th>
                    <th class="text-center tdv" scope="col">Description</th>
                    <th class="text-center tdv" scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                
            <%user.downloadBookmarks.forEach(function(download, index){%>
              <tr>
                <th class="align-middle tdv small text-center" scope="row"><%=index + 1%></th> 
                <td class="align-middle tdv small"><%=download.date.toDateString()%></td>
                <td class="align-middle tdv small" nowrap> <span
                  class="kt-badge kt-badge--username kt-badge--unified-success kt-badge--lg kt-badge--bold mr-2"><%=download.author.username.charAt(0).toUpperCase()%></span><%=download.author.username%></td>
                <td class="align-middle tdv small title"><%=download.title%></td>
                <td class="align-middle tdv small"><%=download.exam%></td>
                <td class="align-middle tdv small"><%=download.attempt%></td>
                <td class="align-middle tdv small" width="25%"><%=download.subject%></td>
                <td class="align-middle tdv small"><%-download.description%></td>
                <td class="align-middle tdv" nowrap>
                  <!-- <span class="dropdown">
                    <a href="#" class="pr-2" data-toggle="dropdown" aria-expanded="true"> <i class="fas fa-ellipsis-v"></i></a>
                    <div class="dropdown-menu dropdown-menu-right">
                        <a class="dropdown-item" href="/downloads/<%=download.id%>/edit"><i class="far fa-edit fa-xs"></i> Edit Details</a>
                       <div class="dropdown-item"> 
                        <form action="/downloads/<%=download.id%>?_method=DELETE" method="POST">
                          <button class="btn btn-sm btn-danger"><i class="far fa-trash-alt"></i> Delete</button>
                        </form>
                        </div>
                    </div>
                    </span> -->
                    <form class="d-inline-block m-0 p-0 stdDash-bookmark-form" id="stdDash_Bookmark_<%=download.id%>" action="/user/downloads/<%=download.id%>/bookmark?_method=PUT" method="POST">
                      <button type="submit" class="btn border-0 bg-transparent p-0 m-0"><i class="fas fa-bookmark"></i></button>
                    </form>
                    <%if(download.file[0]){%>
                    <a target="_blank" class="btn btn-sm btn-clean btn-icon btn-icon-md" href="<%=download.file[0].url%>"> <span><i class="fas fa-file-download"></i></span></a>
                    <%} else {%>
                    <a class="btn btn-sm btn-clean btn-icon btn-icon-md" href="#"> <span><i class="fas fa-file-download"></i></span></a>
                    <%}%>
                    <a class="btn btn-sm btn-clean btn-icon btn-icon-md" href=#><span><i class="fas fa-share-alt"></i></span></a>
                </td>
              </tr>
            <%})%>  
            </tbody>
          </table>
          </div>
        </div>
        
        <!-------------------------------------------------------------------------------->
        <!----------------------------Video Table----------------------------------------->
        <!-------------------------------------------------------------------------------->
        
        
        <h4 class="d-inline">Video Bookmarks</h4> 
        <p class="d-inline ml-1">You have <span class="kt-badge kt-badge--warning kt-badge--lg kt-badge--rounded"><%=user.videoBookmarks.length%></span> bookmarked <%=user.videoBookmarks.length===1 ? "video":"videos"%>.</p>
            <div class="my-3">
            <div class="row">
              <%user.videoBookmarks.forEach(function(video){%>   
                <div class="col-md-4">
                    <!--begin:: Widgets/Blog-->
                    <div class="kt-portlet kt-portlet--height-fluid kt-widget19">
                      <div class="kt-portlet__body kt-portlet__body--fit kt-portlet__body--unfill">
                        <div class="kt-widget19__pic kt-portlet-fit--top kt-portlet-fit--sides">
                          <div class="embed-responsive embed-responsive-16by9 card-img-top">
                            <iframe width="560" height="315" class="embed-responsive-item" src="<%=video.url%>"
                              frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                              allowfullscreen></iframe>
                          </div>
                        </div>
                      </div>
                      <div class="kt-portlet__body">
                        <div class="kt-widget19__wrapper mb-0">
                          <h5 class="kt-widget19__title kt-font-dark kt-label-font-color-3 pb-4 mb-0">
                            <%=video.title%>
                          </h5>
                          <div class="kt-widget19__content">
                            <div class="kt-widget19__userpic">
                              <span
                                class="kt-badge kt-badge--username kt-badge--unified-success kt-badge--lg kt-badge--bold kt-hidden-"><%=video.author.username.charAt(0).toUpperCase()%></span>
                            </div>
                            <div class="kt-widget19__info">
                              <a href="/teachers/<%=video.author.id%>" class="kt-widget19__username">
                                <%=video.author.username%>
                              </a>
                              <span class="kt-widget19__time small">
                                CA Faculty/Author
                              </span>
                            </div>
                            <span class="kt-badge kt-badge--info kt-badge--inline kt-badge--pill float-right" data-toggle="tooltip"
                              data-placement="left" title="Date of Upload"><%=video.createdAt.toDateString()%></span>
                          </div>
                          <div class="mb-3 small font-weight-bold"> Applicable: <span
                              class="kt-badge kt-badge--danger kt-badge--inline kt-badge--pill kt-badge--bold" data-toggle="tooltip"
                              data-placement="bottom" title="Applicable Exam"><%=video.exam%></span>
                            <span class="kt-badge kt-badge--warning kt-badge--inline kt-badge--pill kt-badge--bold" data-toggle="tooltip"
                              data-placement="bottom" title="Applicaple Attempt"><%=video.attempt%></span>
                          </div>
                          <small><span class="font-weight-bold">Description:</span> <%=video.description%></small>
                          <div class="kt-widget19__text mb-2">
                          </div>
                        </div>
                        <div class="kt-widget19__action">
                            <form  class="d-inline float-right rmBookmark-video-form" action="/user/<%=currentUser._id%>/videos/<%=video._id%>?_method=PUT" method="POST">
                              <button type="submit" class="btn btn-sm ml-1 btn-info video-student-unbookmark-button" 
                              onclick="return confirm('Are you sure you want to remove this item from your bookmarks?')">Bookmarked</button>
                          </form>
                        </div>
                      </div>
                    </div>
                    <!--end:: Widgets/Blog-->
                  </div>
              <%})%>
            </div>
          </div>
        </div>
</div>
<!-- end:: Content -->



