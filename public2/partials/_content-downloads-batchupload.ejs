<% include ./_subheader-subheader-v2 %>
<!-- begin:: Content -->
<div class="kt-container  kt-grid__item kt-grid__item--fluid">

  <div class="row">
    <div class="col">
      <div class="kt-portlet">
        <div class="kt-portlet__head">
          <div class="kt-portlet__head-label">
            <h3 class="kt-portlet__head-title">
              Upload Batch File
            </h3>
          </div>
        </div>
        <!--begin::Form-->
        <form class="kt-form" action="/batchupload" method="POST" enctype="multipart/form-data">
          <div class="kt-portlet__body">
            <div class="form-group row">
              <label for="batch[name]" class="col-2 col-form-label">Text</label>
              <div class="col-10">
                <input class="form-control" type="text" id="batch[name]" name="name">
              </div>
            </div>
            <div class="form-group row">
              <label for="batchFile" class="col-sm-2 col-form-label">Excel Data File</label>
              <div class="col-sm-8">
                <input type="file" class="form-control-file" id="batchfile" name="batchfile">
              </div>
            </div>
            <div class="form-group row">
              <label for="batchFile" class="col-sm-2 col-form-label">Documents</label>
              <div class="col-sm-8">
                <input type="file" class="form-control-file" id="documents" name="documents" multiple>
              </div>
            </div>
            <div class="kt-portlet__foot">
              <div class="kt-form__actions">
                <button type="submit" class="btn btn-primary">Submit</button>
                <!-- <button type="reset" class="btn btn-secondary">Cancel</button> -->
              </div>
            </div>
        </form>
        <!--end::Form-->
      </div>
    </div>
  </div>
  <div class="col">
    <div class="kt-portlet">
      <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
          <h3 class="kt-portlet__head-title">
            Upload Batch File
          </h3>
        </div>
      </div>
      <!--begin::Form-->
      <form class="kt-form" action="/batchuploadvideos" method="POST" enctype="multipart/form-data">
        <div class="kt-portlet__body">
          <div class="form-group row">
            <label for="batch[name]" class="col-2 col-form-label">Text</label>
            <div class="col-10">
              <input class="form-control" type="text" id="batch[name]" name="name">
            </div>
          </div>
          <div class="form-group row">
            <label for="batchFile" class="col-sm-2 col-form-label">Excel Data File</label>
            <div class="col-sm-8">
              <input type="file" class="form-control-file" id="batchvideofile" name="batchvideofile">
            </div>
          </div>
          <div class="kt-portlet__foot">
            <div class="kt-form__actions">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </div>
      </form>
      <!--end::Form-->
    </div>
  </div>
</div>
</div>



<div class="row">
  <% batchfiles.forEach(function(file){%>
  <div class="col-md-2">
    <!--Begin::Portlet-->
    <div class="kt-portlet">
      <div class="kt-portlet__head kt-portlet__head--noborder">
        <div class="kt-portlet__head-label mx-auto">
          <h3 class="kt-portlet__head-title">
            <%=file.name%>
          </h3>
        </div>
      </div>
      <div class="kt-portlet__body">
        <!--begin::Widget -->
        <div class="kt-widget__files">
          <div class="kt-widget__media text-center pb-3 bt-4">
            <a href="/batch/<%=file.id%>" target="_blank">
              <img class="kt-widget__img" src="assets/media/files/xls.svg" alt="image" style="width: 6rem;">
            </a>
          </div>
          <div class="kt-widget__desc text-center mb-2 font-weight-normal">
            <%-file.createdAt.toDateString()%>
          </div>
          <form action="/batch/<%=file.id%>?_method=DELETE" method="POST" class="d-flex justify-content-center">
            <button type="submit" class="btn btn-label-danger btn-sm">DELETE</button>
          </form>
        </div>
        <!--end::Widget -->
      </div>
    </div>
    <!--End::Portlet-->
  </div>
  <%})%>
</div>


</div>
<!-- end:: Content -->